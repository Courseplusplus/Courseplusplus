script(type='text/javascript').
    var FindCourseId = function () {
        var href_array = window.location.href.split("/");
        for (var idx=0 ; idx<href_array.length;idx++) {
            console.log(idx);
            if(href_array[idx] == "course"){
                return href_array[idx+1];
            }
        }
        return 1;
    };
    var course_id = FindCourseId();
    $('#side-class').attr({href: "/course/"+course_id});
    $('#side-resource').attr({href: "/course/"+course_id}+"/resource");
    $('#side-assignment').attr({href: "/course/"+course_id+"/assignment"});
    $('#side-team').attr({href: "/course/"+course_id+"/team"});