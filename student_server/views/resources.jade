extends ./layout

block content
    h3 所有资源
    table(class="table table-hover" style="margin-top:30px;")
        each item in list
            tr
                td
                    div(class="col-lg-12")
                        a(href="#",class="link col-lg-9",style="color:#222;font-size:14px")
                            span #{item["resource_name"]}
                        a(class="link col-lg-3",href="/download/resource/#{item['resource_id']}") 点击下载
    script(type='text/javascript').
        $('#side-resource').attr({href: "/course/#{params['course_id']}/resource"});
        $('#side-assignment').attr({href: "/course/#{params['course_id']}/assignment"});
        $('#side-team').attr({href: "/course/#{params['course_id']}/team"});
