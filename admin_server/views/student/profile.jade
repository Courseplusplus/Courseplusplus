extends ../layout
block content
    div(class="col-sm-12 col-md-8" style="margin:auto")
        div(class="thumbnail")
            div(class="caption" style="padding-left:30px")
                h3 #{student['name']}
                p 电话: #{student['telephone']}
                table(class="table table-hover" style="margin-top:30px;")
                    each item in list
                        tr
                            td
                                a(href="/course/#{item['course_id']}",class="link",style="color:#222;font-size:16px")
                                    span(class="glyphicon glyphicon-folder-close")
                                    span(style="margin-left:10px;") #{item["course_name"]}

    script(type='text/javascript').
        $('#side-class').attr({href: "/course/#{course['course_id']}"});
        $('#side-resource').attr({href: "/course/#{course['course_id']}/resource"});
        $('#side-assignment').attr({href: "/course/#{course['course_id']}/assignment"});
        $('#side-team').attr({href: "/course/#{course['course_id']}/team"});